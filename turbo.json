{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"globalEnv": ["NODE_ENV"],
	"tasks": {
		"test": {
			"dependsOn": ["^test"],
			"inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts"],
			"outputs": ["coverage/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*", "!.env*.example"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"start": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^build", "build"]
		},
		"lint": {
			"inputs": ["src/**", "eslint.config.js", "tsconfig.json", "package.json"]
		},
		"type:check": {
			"inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "tsconfig.json", "package.json"]
		},
		"clean": {
			"cache": false
		},
		"db:generate": {
			"inputs": ["src/db/schema.ts", "src/scripts/drizzle.config.ts", ".env*", "!.env*.example"],
			"outputs": ["migrations/**"]
		},
		"db:migrate": {
			"dependsOn": ["^db:generate"],
			"inputs": ["src/db/schema.ts", "src/scripts/drizzle.config.ts", ".env*", "!.env*.example"]
		},
		"db:push": {
			"inputs": ["src/db/schema.ts", "src/scripts/drizzle.config.ts", ".env*", "!.env*.example"]
		},
		"db:seed": {
			"dependsOn": ["^db:migrate"],
			"inputs": ["src/scripts/seed.ts", "src/scripts/seed/**", "src/db/schema.ts", ".env*", "!.env*.example"]
		}
	}
}
