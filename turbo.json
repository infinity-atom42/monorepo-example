{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "globalDependencies": [".env"],
  "tasks": {
    "test": {
			"dependsOn": ["^test"]
		},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^start"]
    },
    "lint": {
      "cache": false,
      "dependsOn": ["^lint"],
      "env": ["PORT"]
    },
    "type:check": {
      "dependsOn": ["^type:check"]
    }
  }
}
