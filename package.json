{
	"name": "asapreverse",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"auth:generate": "turbo run auth:generate",
		"auth:migrate": "turbo run auth:migrate",
		"auth:push": "turbo run auth:push",
		"build": "turbo run build",
		"clean": "turbo run clean && rm -rf .turbo node_modules .test",
		"db:generate": "turbo run db:generate",
		"db:migrate": "turbo run db:migrate",
		"db:push": "turbo run db:push",
		"db:seed": "turbo run db:seed",
		"dev": "turbo run dev",
		"format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore --ignore-pattern \"**/auth/drizzle.schema.ts\"",
		"format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore --ignore-pattern \"**/auth/drizzle.schema.ts\"",
		"lint": "turbo run lint",
		"start": "turbo run start",
		"test": "turbo run test",
		"type:check": "turbo run type:check"
	},
	"devDependencies": {
		"@faker-js/faker": "^10.1.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@packages/config": "workspace:*",
		"@types/node": "^24.9.2",
		"eslint": "^9.39.0",
		"knip": "^5.66.4",
		"prettier": "^3.6.2",
		"prettier-plugin-nginx": "^1.0.3",
		"prettier-plugin-packagejson": "^2.5.19",
		"prettier-plugin-sh": "^0.18.0",
		"prettier-plugin-sql": "^0.19.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"turbo": "^2.6.0",
		"typescript": "5.9.3"
	},
	"packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
	"engines": {
		"node": ">=22"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide",
		"core-js-pure",
		"sharp"
	]
}
