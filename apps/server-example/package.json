{
	"name": "server-example",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"module": "src/index.ts",
	"scripts": {
		"build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ./dist/server src/index.ts",
		"build:linux": "bun build --compile --minify-whitespace --minify-syntax --target bun-linux-x64 --outfile ./dist/server src/index.ts",
		"clean": "rm -rf dist .turbo node_modules",
		"db:generate": "dotenvx run --convention=nextjs -- drizzle-kit generate --config=src/scripts/drizzle.config.ts",
		"db:migrate": "dotenvx run --convention=nextjs -- drizzle-kit migrate --config=src/scripts/drizzle.config.ts",
		"db:push": "dotenvx run --convention=nextjs -- drizzle-kit push --config=src/scripts/drizzle.config.ts",
		"db:seed": "dotenvx run --convention=nextjs -- bun run src/scripts/seed.ts",
		"dev": "bun run --watch src/index.ts",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"start": "./dist/server",
		"test": "echo \"Error: no test specified\" && exit 1",
		"type:check": "tsc --noEmit"
	},
	"dependencies": {
		"@elysiajs/bearer": "^1.4.1",
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/jwt": "^1.4.0",
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/opentelemetry": "^1.4.0",
		"@elysiajs/static": "^1.4.0",
		"@packages/cluster": "workspace:*",
		"@t3-oss/env-core": "^0.13.8",
		"drizzle-orm": "^0.44.6",
		"elysia": "catalog:",
		"lodash-es": "^4.17.21",
		"pg": "^8.16.3",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "^1.51.0",
		"@types/bun": "catalog:",
		"@types/lodash-es": "^4.17.12",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.31.5",
		"drizzle-seed": "^0.3.1",
		"eslint-plugin-drizzle": "^0.2.3"
	}
}
