{
	"name": "server-example",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"module": "src/index.ts",
	"scripts": {
		"build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ./dist/server src/index.ts",
		"build:linux": "bun build --compile --minify-whitespace --minify-syntax --target bun-linux-x64 --outfile ./dist/server src/index.ts",
		"clean": "rm -rf dist .turbo node_modules",
		"db:generate": "dotenvx run --convention=nextjs -- drizzle-kit generate --config=src/scripts/drizzle.config.ts",
		"db:migrate": "dotenvx run --convention=nextjs -- drizzle-kit migrate --config=src/scripts/drizzle.config.ts",
		"db:push": "dotenvx run --convention=nextjs -- drizzle-kit push --config=src/scripts/drizzle.config.ts",
		"db:seed": "dotenvx run --convention=nextjs -- bun run src/scripts/seed.ts",
		"dev": "bun run --watch src/index.ts",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"start": "./dist/server",
		"test": "dotenvx run --env-file=.env.test -- bun test --concurrent",
		"test:watch": "dotenvx run --env-file=.env.test -- bun test --watch --concurrent",
		"type:check": "tsc --noEmit"
	},
	"dependencies": {
		"@elysiajs/bearer": "catalog:",
		"@elysiajs/cors": "catalog:",
		"@elysiajs/eden": "catalog:",
		"@elysiajs/jwt": "catalog:",
		"@elysiajs/openapi": "catalog:",
		"@elysiajs/opentelemetry": "catalog:",
		"@elysiajs/static": "catalog:",
		"@packages/cluster": "workspace:*",
		"@packages/drizzle-query-builder": "workspace:*",
		"@packages/schemas": "workspace:*",
		"@t3-oss/env-core": "catalog:",
		"@zod/core": "catalog:",
		"better-auth": "catalog:",
		"decimal.js": "catalog:",
		"drizzle-orm": "catalog:",
		"drizzle-zod": "catalog:",
		"elysia": "catalog:",
		"jose": "catalog:",
		"lodash-es": "catalog:",
		"pg": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "catalog:",
		"@types/bun": "catalog:",
		"@types/lodash-es": "catalog:",
		"@types/pg": "catalog:",
		"drizzle-kit": "catalog:",
		"drizzle-seed": "catalog:",
		"eslint-plugin-drizzle": "catalog:"
	}
}
